@using rina.Models.Admin
@model AddVehicleModel

<div class="formContainer">
    <form asp-action="AddVehicle" id="AddVehicleForm">
        <h3>ADD VEHICLE</h3>
        <input asp-for="Name" type="text" placeholder="vehicle name">
      
        <fieldset id="stations" class="p-3" style="border: 1px solid #ad5049; margin-top: 10px;">
            <legend class="float-none w-auto px-3" style="text-align: left; font-size: 1.1rem; color: #91403a;">
                Select stations
            </legend>

            <select name="station" id="select" autocomplete="off" required style="width: 100%; padding: 5px 0 5px 0; color: gray;">
                <option>station 1</option>
                <option>station 2</option>
                <option>station 3</option>
                <option>station 4</option>
            </select>
        </fieldset>

        <button type="submit" class="btn">ADD VEHICLE</button>
    </form>
</div>